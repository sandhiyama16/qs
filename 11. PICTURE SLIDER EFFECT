        /* Slider images container */
        .slider {
            position: relative;
            width: 400%;
            height: 100%;
            transition: transform 1s ease-in-out;
        }

        /* Individual slide */
        .slide {
            width: 25%;
            height: 100%;
        }

        /* Image styling */
        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 10px;
        }

        /* Navigation labels (radio buttons) */
        .navigation {
            position: absolute;
            bottom: 10px;
            width: 100%;
            text-align: center;
        }

        .navigation label {
            background-color: rgba(255, 255, 255, 0.7);
            border-radius: 50%;
            width: 15px;
            height: 15px;
            margin: 0 5px;
            display: inline-block;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .navigation label:hover {
            background-color: #ccc;
        }

        /* Slider image transitions based on radio button selection */
        #slide1:checked ~ .slider {
            transform: translateX(0%);
        }
        #slide2:checked ~ .slider {
            transform: translateX(-25%);
        }
        #slide3:checked ~ .slider {
            transform: translateX(-50%);
        }
        #slide4:checked ~ .slider {
            transform: translateX(-75%);
        }
    </style>
